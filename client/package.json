{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "main": "index.tsx",
  "scripts": {
    "start": "webpack serve --open",
    "build": "NODE_ENV=production webpack --mode production",
    "test": "jest",
    "electron:dev": "concurrently \"npm run start\" \"electron electron.js\"",
    "electron:build": "BUILD_TARGET=electron npm run build && electron-builder --mac --win",
    "electron:build:mac": "BUILD_TARGET=electron npm run build && electron-builder --mac",
    "electron:build:win": "BUILD_TARGET=electron npm run build && electron-builder --win",
    "electron:build:linux": "BUILD_TARGET=electron npm run build && electron-builder --linux",
    "electron:test": "BUILD_TARGET=electron npm run build && electron-builder --dir"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hotjar/browser": "^1.0.9",
    "@react-hook/window-size": "^3.1.1",
    "@sentry/integrations": "^7.114.0",
    "@sentry/react": "^8.55.0",
    "@sentry/tracing": "^7.120.4",
    "@sentry/webpack-plugin": "^2.23.1",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.4",
    "@types/react-tooltip": "^4.2.4",
    "axios": "^1.13.2",
    "copy-webpack-plugin": "^12.0.2",
    "express": "^4.21.2",
    "firebaseui": "^6.1.0",
    "logrocket": "^9.0.2",
    "phaser": "^3.90.0",
    "phaser3-rex-plugins": "^1.80.17",
    "preact": "^10.27.2",
    "preact-router": "^4.1.2",
    "react-confetti": "^6.4.0",
    "react-countup": "^6.5.0",
    "react-loading-skeleton": "^3.5.0",
    "react-modal": "^3.16.3",
    "react-progressbar-fancy": "^1.1.4",
    "shepherd.js": "^13.0.1",
    "socket.io-client": "^4.8.1",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@types/jest": "^29.5.14",
    "@types/react-modal": "^3.16.3",
    "assert": "^2.1.0",
    "babel-loader": "^9.2.1",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.9.1",
    "dotenv": "^16.6.1",
    "dotenv-webpack": "^8.1.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.5",
    "https-browserify": "^1.0.0",
    "jest": "^29.7.0",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "os-browserify": "^0.3.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "url": "^0.11.4",
    "wait-on": "^8.0.5",
    "webpack": "^5.103.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.legion.game",
    "productName": "Legion",
    "extraFiles": [
      {
        "from": "preload.js",
        "to": "preload.js"
      }
    ],
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "extraMetadata": {
      "main": "electron.js"
    },
    "asarUnpack": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "public/logo.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/logo.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png"
    }
  }
}
